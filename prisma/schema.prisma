generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid()) // Use uuid for PostgreSQL
  name     String? // Optional name
  email    String  @unique
  cpf      String? @unique // CPF is optional, but must be unique if provided
  password String // Stores the password
}
